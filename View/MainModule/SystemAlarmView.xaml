                                                <Setter TargetName="ItemBorder"
                                                        Property="Background"
                                                        Value="Transparent" />
                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex"
                                                     Value="1">
                                                <Setter TargetName="ItemBorder"
                                                        Property="Background"
                                                        Value="#19000000" />
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>
                </ge:ResponsiveGrid>
                <!--</Viewbox>-->
            </ScrollViewer>
        </TabItem>
